<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ECG NEW USER"
        android:textStyle="italic|bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textColor="@color/purple_j"
        android:textSize="30dp"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/v_name_register"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/whitesquare_shadow"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView">

        <ImageView
            android:id="@+id/image_name_register"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/ic_8d64de_id" />

        <EditText
            android:id="@+id/editTextTextname"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:hint="Username"
            android:ems="10"
            android:inputType="textPersonName"
            android:singleLine="true" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/v_id_register"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:background="@drawable/whitesquare_shadow"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_name_register"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_id_register"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:background="@drawable/ic_8d64de_person_24"
            android:layout_margin="5dp"/>

        <EditText
            android:id="@+id/editTextTextPersonName"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="ID"
            android:ems="10"
            android:inputType="textPersonName"
            android:background="@android:color/transparent"
            android:singleLine="true"
            android:layout_marginRight="10dp"/>

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/v_password_register"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_margin="15dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/whitesquare_shadow"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_id_register">

        <ImageView
            android:id="@+id/image_password_register"
            android:layout_width="21dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/ic_8d64de_password" />

        <EditText
            android:id="@+id/editTextTextPassword"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:ems="10"
            android:hint="password"
            android:inputType="textPassword"
            android:singleLine="true" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <Button
        android:id="@+id/registerbutton"
        android:background="@drawable/bin_red"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/v_password_register"
        android:text="register"/>




</androidx.constraintlayout.widget.ConstraintLayout>